.page-header
  = link_to new_product_field_path, :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Product field
  %h1 Listing product_fields

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Name
        %th Field type
        %th Required
        %th Product type
        %th
        %th
        %th

    %tbody
      - @product_fields.each do |product_field|
        %tr
          %td= product_field.name
          %td= product_field.field_type
          %td= product_field.required
          %td= product_field.product_type
          %td= link_to 'Show', product_field
          %td= link_to 'Edit', edit_product_field_path(product_field)
          %td= link_to 'Destroy', product_field, :data => { confirm: 'Are you sure?' }, :method => :delete
