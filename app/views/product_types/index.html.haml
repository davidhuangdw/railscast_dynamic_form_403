.page-header
  = link_to new_product_type_path, :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Product type
  %h1 Listing product_types

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Name
        %th
        %th
        %th

    %tbody
      - @product_types.each do |product_type|
        %tr
          %td= product_type.name
          %td= link_to 'Show', product_type
          %td= link_to 'Edit', edit_product_type_path(product_type)
          %td= link_to 'Destroy', product_type, :data => { confirm: 'Are you sure?' }, :method => :delete
